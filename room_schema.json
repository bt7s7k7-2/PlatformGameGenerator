{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/bt7s7k7-2/PlatformGameGenerator/blob/master/room_schema.json",
    "title": "Room Schema",
    "description": "Room prefab for map generation",
    "type": "object",
    "$defs": {
        "entrance": {
            "enum": [
                "closed",
                "door",
                "wall",
                "any",
                "open"
            ]
        }
    },
    "properties": {
        "$config": {
            "type": "object",
            "description": "Configuration of the prefab",
            "properties": {
                "groups": {
                    "description": "Groups the room belongs to",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "allow_flip": {
                    "description": "Can the room be flipped?",
                    "type": "boolean"
                },
                "only_once": {
                    "description": "Can the room be instantiated only once in a socket?",
                    "type": "boolean"
                },
                "left": {
                    "$ref": "#/$defs/entrance"
                },
                "right": {
                    "$ref": "#/$defs/entrance"
                },
                "down": {
                    "$ref": "#/$defs/entrance"
                },
                "up": {
                    "$ref": "#/$defs/entrance"
                },
                "key": {
                    "type": "boolean",
                    "description": "Does this room provide a key pickup?"
                }
            },
            "additionalProperties": false
        },
        "actors": {
            "description": "Room actors array, generated by the level editor"
        }
    },
    "required": [
        "$config",
        "actors"
    ]
}
